<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="textAllCaps">false</item>
        <!--  <item name="android:windowEnterTransition">@transition/explode</item>
          <item name="android:windowExitTransition">@transition/explode</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="def_button_style">
        <item name="button_color">@android:color/holo_green_light</item>
        <item name="text_color">@color/colorAccent</item>
        <item name="text_size">14sp</item>
        <item name="circle_loading_width">1dp</item>
        <item name="circle_loading_color">@android:color/darker_gray</item>
        <item name="failed_button_color">@android:color/holo_red_light</item>
        <item name="login_text">登录</item>
        <item name="failed_text">失败请重试!</item>
    </style>
</resources>
