<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="500" android:propertyName="scaleX" android:valueTo="0.5f" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="scaleY" android:valueTo="0.5f" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="alpha" android:valueTo="0.5f" android:valueType="floatType" />
        </set>
    </item>

    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="500" android:propertyName="scaleX" android:valueTo="1f" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="scaleY" android:valueTo="1f" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="alpha" android:valueTo="1f" android:valueType="floatType" />
        </set>
    </item>
</selector>